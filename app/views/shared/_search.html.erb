 <div class="row">
  <div class="col-sm-8 offset-sm-2">
    <%= form_tag(root_path, method: "get", class: "searchbar") do %>
      <%= text_field_tag :city, nil, placeholder: 'City', class: 'search-city' %>
      <%= select_tag :category, options_from_collection_for_select(
            Activity::CATEGORY,
            :to_s, :to_s),
            class: 'styled-select' %>

      <%= submit_tag "Search", class: "search-btn" %>
    <% end %>
  </div>
</div>
