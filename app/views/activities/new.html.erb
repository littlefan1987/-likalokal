<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="mt-5">Create a new activity</h1>

      <%= simple_form_for @activity do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price %>
        <%= f.input :city %>
        <%= f.input :category %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: 'btn btn-primary btn-block' %>
      <% end %>
    </div>
  </div>
</div>
