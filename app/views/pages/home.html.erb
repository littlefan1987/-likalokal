<div class="container-fluid no-padding no-margin">
  <div class="row">
    <div class="col-md-12">
      <div class="homepage">
        <div class="row">
          <div class="col-md-12">
            <div class="video-container filter">
              <div class="title-container">
                <h1>Likalokal</h1>
                <p>Follow a local into the dark.</p>
              </div>
              <div class="">
                <%= video_tag("shaman_tree.mp4", autoplay: true, loop: true, class: "fillWidth" ) %>
              </div>
            </div>
            <div class="search-container">
              <div class="container">
                <%= render 'shared/search' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <%= form_tag activities_path, method: :get do %>
        <%= text_field_tag :city,
            params[:city],
            class: "form-control", id: "city",
            placeholder: "Find a movie" %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="section">
          <h2 class="section-title">Experience a new place through the eyes of a local</h2>
          <div class="container">
            <div class="row cards">
              <% @activities.each do |activity| %>
                <div class="card-activity mb-3">
                  <img src="<%= activity.photo %>" />
                  <div class="card-activity-infos">
                    <h2><%= activity.name %></h2>
                    <p><%= truncate(activity.description, :length => 100) %></p>
                    <span class="card-activity-pricing"><%= activity.price %>â‚¬</span>
                    <%= link_to "Learn more", activity_path(activity), class: "card-activity-button"  %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
